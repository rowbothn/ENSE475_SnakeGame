<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <TextView
        android:id="@+id/rankTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/rank"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/rankDate"
        android:layout_width="@dimen/startMenu_button_width"
        android:layout_height="@dimen/startMenu_button_height"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/rankDate"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/rankPoint"
        android:layout_width="@dimen/startMenu_button_width"
        android:layout_height="@dimen/startMenu_button_height"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="45dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/rankPoint"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />
</RelativeLayout>